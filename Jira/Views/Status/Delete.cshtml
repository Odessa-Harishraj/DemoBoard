@model JiraClone.Data.StatusConfig
@{
    Layout = "_Layout";
}
@section Styles {
    <link rel="stylesheet" href="~/css/status-delete.css" />
}


<div class="status-delete-page">

    <h2>Delete Status</h2>

    <div class="status-delete-box">

        <p>Are you sure you want to delete this status?</p>

        <strong>@Model.Name</strong>

        <form method="post">
            <input type="hidden" asp-for="Id" />

            <button type="submit" class="btn-delete">Delete</button>
            <a asp-action="Index" class="btn-cancel">Cancel</a>
        </form>

    </div>

</div>
