@using JiraClone.Data
@model JiraClone.Data.WorkItem
@{
    Layout = "_Layout";
}
@section Styles {
    <link rel="stylesheet" href="~/css/workitem-create.css" />
}


<div class="workitem-edit-page">
    <h2>Edit WorkItem</h2>
     <div class="workitem-edit-form">
        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()

            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label>Project</label>
                <select asp-for="ProjectId"
                        id="projectSelect"
                        class="form-control"
                        required
                        onchange="loadBoards()">
                    <option value="0">-- Select Project --</option>
                    @foreach (var p in ViewBag.Projects as List<Project>)
                    {
                        <option value="@p.Id" selected="@(p.Id == Model.ProjectId)">
                            @p.Name
                        </option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label>Board</label>
                <select asp-for="BoardId"
                        id="boardSelect"
                        class="form-control"
                        required>
                    <option value="0">-- Select Board --</option>
                    @foreach (var b in ViewBag.Boards as List<Board>)
                    {
                        <option value="@b.Id" selected="@(b.Id == Model.BoardId)">
                            @b.Name
                        </option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label>Item</label>
                <input asp-for="Item" class="form-control" />
            </div>

            <div class="form-group">
                <label>Description</label>
                <textarea asp-for="Description" class="form-control"></textarea>
            </div>

            <div class="form-group">
                <label>Type</label>
                <input asp-for="Type" class="form-control" />
            </div>

            <div class="form-group">
                <label>Status</label>
                <select asp-for="Status" class="form-control">
                    <option value="">Select Status</option>
                    @foreach (var s in ViewBag.Statuses as List<StatusConfig>)
                    {
                        <option value="@s.Name" selected="@(s.Name == Model.Status)">
                            @s.Name
                        </option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label>Dev Lead</label>
                <input asp-for="DevLead" class="form-control" />
            </div>

            <div class="form-group">
                <label>Dev</label>
                <input asp-for="Dev" class="form-control" />
            </div>

            <div class="form-group">
                <label>BA Lead</label>
                <input asp-for="BALead" class="form-control" />
            </div>

            <div class="form-group">
                <label>BA</label>
                <input asp-for="BA" class="form-control" />
            </div>

            <div class="form-group">
                <label>Priority</label>
                <input asp-for="Priority" class="form-control" />
            </div>

            <div class="form-group">
                <label>Comments</label>
                <input asp-for="Comments" class="form-control" />
            </div>

            <div class="form-group">
                <label>Demo Date</label>
                <input asp-for="DemoDate" type="date" class="form-control" />
            </div>

            <div class="form-group">
                <label>Design ETA</label>
                <input asp-for="DesignETA" type="date" class="form-control" />
            </div>

            <div class="form-group">
                <label>ETA</label>
                <input asp-for="ETA" type="date" class="form-control" />
            </div>

            <div class="form-group">
                <label>Dev ETA</label>
                <input asp-for="DevETA" type="date" class="form-control" />
            </div>

            <button type="submit" class="btn-save">Update</button>
            <a asp-action="Index" class="btn-cancel">Cancel</a>
        </form>
     </div>
</div>

@section Scripts {
    <script>
        function loadBoards() {
            var projectId = document.getElementById('projectSelect').value;
            if (projectId === "0") return;

            fetch('/WorkItems/GetBoardsByProject?projectId=' + projectId)
                .then(res => res.json())
                .then(data => {
                    var boardSelect = document.getElementById('boardSelect');
                    boardSelect.innerHTML = '<option value="0">-- Select Board --</option>';
                    data.forEach(b => {
                        var opt = document.createElement('option');
                        opt.value = b.id;
                        opt.text = b.name;
                        boardSelect.add(opt);
                    });
                });
        }
    </script>
}
