    }

    .excel-table tr:hover {
        background-color: #eef5ff;
    }

    /* Base action link */
    .excel-table .action-link {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        height: 20px;
        width: 20px;
        text-decoration: none;
        margin-right: 10px; /* add gap between icons */
    }

    /* remove margin on the last icon in the cell */
    .excel-table td .action-link:last-child {
        margin-right: 0;
    }

        /* Icon size follows parent */
        .excel-table .action-link img {
            width: 100%;
            height: 100%;
        }

